    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="252dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#2c3e50"
        app:cardElevation="10dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/logo_pic"
                android:layout_width="106dp"
                android:layout_height="109dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="18dp"
                android:src="@drawable/logo" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/abeezee"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Save Money"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:transitionName="logo_hunger" />

    <TextView
        android:id="@+id/energy"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/money"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="510dp"
        android:text="Save Energy"
        android:textSize="35sp"
        android:textStyle="bold"
        android:transitionName="logo_text" />

    <TextView
        android:id="@+id/earth"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/money"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="420dp"
        android:text="Save Earth"
        android:textSize="45sp"
        android:textStyle="bold"
        android:transitionName="logo_text" />

    <TextView
        android:id="@+id/logotxt"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="184dp"
        android:text="FootprintHero"
        android:textStyle="italic"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/hero"
        android:layout_width="174dp"
        android:layout_height="97dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="126dp"
        android:layout_marginBottom="73dp"
        android:src="@drawable/hero" />


</RelativeLayout>